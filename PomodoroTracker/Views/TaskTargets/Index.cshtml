@model IEnumerable<PomodoroTracker.Models.TaskTarget>

@{
    ViewData["Title"] = "Index";
}
<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/howler/2.1.3/howler.min.js" integrity="sha256-/Q4ZPy6sMbk627wHxuaWSIXS1y7D2KnMhsm/+od7ptE=" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.css" integrity="sha256-He3QEBKoL/nMXlVsoM7S2C2kjFQqS5L+mgA+F8LpG+U=" crossorigin="anonymous">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js" integrity="sha256-3blsJd4Hli/7wCQ+bmgXfOdK7p/ZUMtPXY08jmxSSgk=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/howler/2.1.3/howler.core.min.js" integrity="sha256-KNY0IDDc9kAie/G8wTJ9BeGjBRqoPgadY2FQM0JmdYc=" crossorigin="anonymous"></script>
        <link rel="stylesheet"  href="~/css/pomodoro.css"/>
        <link rel="stylesheet"  href="~/css/message-container.css">
        <link rel="stylesheet"  href="~/css/table.css">
    </head>
    <body style="background-color:lightgray;">
        <!--Message Container-->
        <div class="container">
            <div id="message-container">
                <center>
                    <span id = "usmsg"> </span>
                </center>
            </div>
        </div>
        <!--Pomodoro Timer-->
            <div class = "container">
               <div id = "pomodoro-container">
                    <!-- Horizontal center -->
                    <div class = "center">
                        <!-- 3 option created with radio button for 'Pomodoro', 'Short Break', 'Long Break' -->
                        <label for="option1" class="radio">
                            <input type="radio" name="rdo" id="option1" class="hidden" checked="checked">POMODORO     
                        </label>
                        <label for="option2" class="radio">
                            <input type="radio" name="rdo" id="option2" class="hidden" checked="checked">SHORT BREAK
                        </label>
                        <label for="option3" class="radio">
                            <input type="radio" name="rdo" id="option3" class="hidden" checked="checked">LONG BREAK
                        </label>
                    </div>
                    <!-- 2 button for start and stop actions -->
                    <div id = "buttons" class = "row">
                        <div class="col-4 text-right">
                            <button id="start" type="button" class="btn btn-light">START</button>                        
                        </div>
                        <div class="col-8 text-center">
                            <button id="stop" type="button" class="btn btn-light">STOP</button>
                        </div>
                    </div>
                    <!--Pomodoro counter buttons-->
                    <center>
                        <div id  = "pomodoro-counter">
                            POMODORO COUNTER 
                        </div>
                    
                    </center>
                    <center>
                        <div class = "check">
                            <div>
                                <input type="checkbox" id="pomodoro1">
                                <label for="scales">1</label>
                            </div>        
                            <div>
                                <input type="checkbox" id="pomodoro2">
                                <label for="scales">2</label>
                            </div>
                            <div>
                                <input type="checkbox" id="pomodoro3">
                                <label for="scales">3</label>
                            </div>
                            <div>
                                <input type="checkbox" id="pomodoro4">
                                <label for="scales">4 </label>
                            </div>
                        </div>
                    </center> 
                
                    <div class="row">
                        <div class="col-12 col-md-5 timer-area"><span id="minute">10</span> minutes</div>
                        <div class="col-12 col-md-2 timer-area">|</div>
                        <div class="col-12 col-md-5 timer-area"><span id="seconds">0</span> seconds</div>
                    </div>
                    <center>
                        <button id="reset" type="button" class="btn btn-dark">Reset Timer</button>
                    </center>
                
               </div>
            </div><br /><br />

        <h1>TO DO LIST</h1>

        <p>
            <a asp-action="Create">Add a task</a>
        </p>
        <table class="table" id="taskTable">
            <thead>
                <tr>
                    <th>
                        Tasks
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TaskTargetName)
                    </td>
                    <td>
                            <span id="state" >-</span>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.TaskTargetId">Delete</a>
                        <a asp-route-id ="@item.TaskTargetId"></a>
                    </td>
                </tr>
        }
            </tbody>
        </table>

        <script src="~/js/pomodoro.js"></script>
    </body>
</html>

